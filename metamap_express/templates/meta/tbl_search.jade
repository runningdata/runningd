extends ../layout

block content

  form.navbar-form(role="search")
    div.input-group.add-on
      input.form-control(placeholder="输入名称: %will%", name="tblName" ,type="text")
      div.input-group-btn
        //- button.btn.btn-default(type="submit") 查询 
        button.btn.btn-default(type="submit")
         i.glyphicon.glyphicon-search

  if cols.length
    table.table.table-striped
      caption 列表 : #{colName}
        thead 
          tr
            td ID
            td 数据库名称
            td 表名称
            td 
              center 操作
      tbody
        each col in cols
          tr
            td #{col.id}
            td #{col.dbName}
            td #{col.tblName}
            td 
              center 
              a.btn.btn-primary.btn-sm(href="tblinfo?dbId=#{col.dbId}&tblId=#{col.tblId}") 表信息