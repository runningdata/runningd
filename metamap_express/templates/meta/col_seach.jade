extends ../layout

block content
  head
    title col列表
    
  h2 Col列表

  form.navbar-form(role="search")
    div.input-group.add-on
      input.form-control(placeholder="输入字段名称: city", name="colName" ,type="text")
      div.input-group-btn
        //- button.btn.btn-default(type="submit") 查询 
        button.btn.btn-default(type="submit")
         i.glyphicon.glyphicon-search

  if cols.length
    table.table.table-striped
      caption Col列表 : #{colName}
        thead 
          tr
            td ID
            td 数据库名称
            td 表名称
            td 字段名称
            td 类型
            td 
              center 操作
      tbody
        each col in cols
          tr
            td #{col.id}
            td #{col.dbName}
            td #{col.tblName}
            td #{col.colName}
            td #{col.colTypeName}
            td 
              center 
              a.btn.btn-primary.btn-sm(href="tblinfo?dbId=#{col.dbId}&tblId=#{col.tblId}") 表信息